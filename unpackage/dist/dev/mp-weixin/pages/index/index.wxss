page {
  padding-top: 40px;
}
.cell {
  width: 108rpx;
  height: 108rpx;
  line-height: 104rpx;
  font-size: 20px;
  font-color: blue;
  text-align: center;
  border: 2rpx solid lightgray;
}
.empty {
  background: white;
}
.selected {
  background: pink;
}
.row:first-child {
  border-left: solid;
}
.row:nth-child(2n) {
  border-right: solid;
}
.cell:first-child {
  border-top: solid;
}
.cell:nth-child(2n) {
  border-bottom: solid;
}

/*============================================*/
.btn {
  background: white;
  border-radius: 10rpx;
  border-width: 0;
  padding: 0;
  margin: 0;
  width: 150rpx;
  height: 80rpx;
  /*text-align: center;*/
  display: inline-block;
}
.btn-hover {
  background: #bbbbbb;
  color: white;
}
